<?xml version="1.0"?>

<fragment version="1">

	<require>fr.toutatice.ecm.platform.services</require>
	<require>fr.toutatice.ecm.platform.elasticsearch</require>

	<extension target="application#MODULE">
		<module>
			<java>${bundle.fileName}</java>
		</module>
	</extension>
	
	<!-- Backport of 8.3 to activate sync ES on given request-->
    <extension target="web#SERVLET">

        <filter>
            <display-name>ElasticSearchFilter</display-name>
            <filter-name>ElasticSearchFilter</filter-name>
            <filter-class>
                fr.toutatice.ecm.es.servlet.filter.ElasticSearchFilter
            </filter-class>
        </filter>
        
        <filter-mapping>
            <filter-name>ElasticSearchFilter</filter-name>
            <url-pattern>/restAPI/*</url-pattern>
            <url-pattern>/site/automation/*</url-pattern>
            <dispatcher>REQUEST</dispatcher>
            <dispatcher>FORWARD</dispatcher>
        </filter-mapping>
    
    </extension>


  <install />

</fragment>
